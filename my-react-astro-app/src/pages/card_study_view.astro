---
import Header from '../components/Header.astro';
import Menu from '../components/Menu.astro';
import Footer from '../components/Footer.astro';
import Card from '../components/Card.astro';
import Layout from '../layouts/Layout.astro';

import { Image } from 'astro:assets';
import lang_ES from '../images/lang-img/lang_ES.png';
import lang_CAT from '../images/lang-img/lang_CAT.png';
import lang_EN from '../images/lang-img/lang_EN.png';
import header_IDEL from '../images/headers-img/IDEL-header-img.png';
---
<Layout title="IDEL">
<div class="container">
  <div class="row">
    <div class="col-11 col-md-11 col-sm-10 justify-content-start">
      <a href="/"><Image src={header_IDEL} alt="header_IDEL" width="300" height="65"/></a>
    </div>
    <div class="col-1 col-md-1 col-sm-2 justify-content-center mt-3">
      <div id="main-nav-bar" class="justify-content-center mr-sm-3">
        <Image src={lang_ES} width="25" height="20" alt="Spanish">
          <div>
            <a href="#es"><Image src={lang_ES} width="25" height="20" alt="Spanish"> ES</a>
            <a href="#cat"><Image src={lang_CAT} width="25" height="20" alt="Catalan"> CAT</a>
            <a href="#en"><Image src={lang_EN} width="25" height="20" alt="English"> EN</a>
          </div>
      </div>
    </div>
  </div>
</div>
<!-- Page content -->
<div class="container mt-5">
<h1>ESTUDIO SOBRE EXCLUSION SOCIAL</h1>
</div>
<!-- Footer -->
<footer class="container-fluid bg-light">
  <!-- Contact Section -->
  <div class="container">
    <div id="contact" class="mx-auto">
      <h3 class="text-center mb-4">Contacto</h3>
      <p class="text-center">Ponte en contacto con nosotros sobre cualquier problema o duda.</p>
      <form action="/" method="post" class="needs-validation" novalidate>
          <div class="mb-3">
              <input type="text" class="form-control" placeholder="Nombre" required name="Name">
              <div class="invalid-feedback">Por favor ingresa tu nombre.</div>
          </div>
          <div class="mb-3">
              <input type="email" class="form-control" placeholder="Email" required name="Email">
              <div class="invalid-feedback">Por favor ingresa un email v√°lido.</div>
          </div>
          <div class="mb-3">
              <input type="text" class="form-control" placeholder="Asunto" required name="Subject">
              <div class="invalid-feedback">Por favor ingresa el asunto.</div>
          </div>
          <div class="mb-3">
              <textarea class="form-control" placeholder="Comentario" rows="5" required name="Comment"></textarea>
              <div class="invalid-feedback">Por favor ingresa tu comentario.</div>
          </div>
          <button type="submit" class="btn btn-primary btn-block mb-5">Enviar</button>
      </form>
    </div>
    <div class="d-flex flex-column justify-content-center">
      <h3 class="text-center mb-4">Placeholder</h3>
      <div class="text-center mb-4">
        <p>Caca placeholder</p>
      </div>
    </div>
  </div>
</footer>
</Layout>